<p id="notice"><%= notice %></p>

<h1>Universes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @universes.each do |universe| %>
      <tr>
        <td><%= universe.title %></td>
        <td><%= universe.author %></td>
        <td><%= universe.description %></td>
        <td><%= link_to 'Show', universe %></td>
        <td><%= link_to 'Edit', edit_universe_path(universe) %></td>
        <td><%= link_to 'Destroy', universe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Universe', new_universe_path %>
