<h1>Listing myths</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Year started</th>
    <th>Description</th>
    <th>Body</th>
    <th>Is approved</th>
    <th>Is cannon</th>
    <th>Up vote</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @myths.each do |myth| %>
  <tr>
    <td><%= myth.title %></td>
    <td><%= myth.author %></td>
    <td><%= myth.year_started %></td>
    <td><%= myth.description %></td>
    <td><%= myth.body %></td>
    <td><%= myth.is_approved %></td>
    <td><%= myth.is_cannon %></td>
    <td><%= myth.up_vote %></td>
    <td><%= link_to 'Show', [myth.mythos, myth] %></td>
    <td><%= link_to 'Edit', edit_mythos_myth_path(myth.mythos, myth) %></td>
    <td><%= link_to 'Destroy', [myth.mythos, myth], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Myth', new_mythos_myth_path(params[:mythos_id]) %>
